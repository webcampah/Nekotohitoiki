<div class="container-fluid main">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="h2">新規登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
          <div class="block">
            <label>名前</label>
              <%= f.text_field :name, autofocus: true, class: "form" %>
            <label>表示名</label>
              <%= f.text_field :nickname, class: "form" %>
            <label>電話番号</label>
              <%= f.text_field :phone_number, class: "form" %>
            <label>メールアドレス</label>
              <%= f.email_field :email, class: "form" %>
            <label>パスワード(6文字以上)</label>
              <%= f.password_field :password, class: "form" %>
            <label>パスワード確認</label>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <label>ログイン情報保持</label>
            </div>
            <% end %>
            <div class="actions">
              <%= f.submit "新規登録", class: "button" %>
            </div>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
