<div class="edit-container">
<h2>ユーザー情報編集</h2>

<%= form_for(@user) do |f| %>

  <div class="flex-container">

  <div class="block">
    <%= attachment_image_tag @user, :user_image, :fill, 100, 100, fallback: "no_image.png", size: "100x100" %>
    <%= f.attachment_field :user_image %>
  </div>

  <div class="block">
    <label>名前</label>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="block">
    <label>フリガナ</label>
    <%= f.text_field :name_kana %>
  </div>

  <div class="block">
    <label>表示名</label>
    <%= f.text_field :nickname %>
  </div>

  <div class="block">
    <label>自己紹介</label>
    <%= f.text_area :user_description %>
  </div>

  <div class="block">
    <label>メールアドレス</label>
    <%= f.email_field :email %>
  </div>

  <div class="block">
    <label>電話番号</label>
    <%= f.text_field :phone_number %>
  </div>
  </div>
  <%= f.submit "保存する" %>

<% end %>
</div>