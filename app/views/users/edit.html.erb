<div class="edit-container">
<h2>ユーザー情報編集</h2>

<%= form_for(@user) do |f| %>
    <%= attachment_image_tag @user, :user_image, :fill, 100, 100, fallback: "no_image.png", size: "100x100" %>
    <%= f.attachment_field :user_image %>

    <label>氏名</label>
    <%= f.text_field :name, autofocus: true %>

    <label>フリガナ</label>
    <%= f.text_field :name_kana %>

    <label>表示名</label>
    <%= f.text_field :nickname %>

    <label>メールアドレス</label>
    <%= f.email_field :email %>

    <label>電話番号</label>
    <%= f.text_field :phone_number %>

    <label>自己紹介</label>
    <%= f.text_area :user_description %>

  <%= f.submit "保存する" %>

<% end %>
</div>