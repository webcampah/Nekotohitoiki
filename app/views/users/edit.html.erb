<div class="container-fluid main">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>ユーザー情報編集</h2>
            <%= form_for(@user) do |f| %>
            <% if @user.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
            <div class="flex-container">
                <div class="block">
                    <%= attachment_image_tag @user, :user_image, :fill, 150, 150, format: 'png', fallback: "no_image.png", size: "150x150" %>
                    <%= f.attachment_field :user_image %>
                </div>
                <div class="block">
                    <label>氏名</label>
                    <%= f.text_field :name, autofocus: true, class: "form" %>
                    <label>フリガナ</label>
                    <%= f.text_field :name_kana, class: "form" %>
                    <label>表示名</label>
                    <%= f.text_field :nickname, class: "form" %>
                    <label>メールアドレス</label>
                    <%= f.email_field :email, class: "form" %>
                    <label>電話番号</label>
                    <%= f.text_field :phone_number, class: "form" %>
                    <label>自己紹介</label>
                    <%= f.text_area :user_description, :size => "60x6", class: "form-l" %>
                </div>
            </div>
            <%= f.submit "保存する", class: "button float-right" %>
            <% end %>
        </div>
    </div>
</div>