                    <%= f.text_field :address, class: "form" %>
                    <label>SNS・サイトURL</label>
                    <%= f.text_field :shop_url, class: "form form-url" %>
                    <label>お店紹介文</label>
                    <%= f.text_area :shop_description, :size => "60x6", class: "form-l" %>
                </div>
            </div>
            <%= f.submit "保存する", class: "button float-right" %>
            <% end %>
        </div>
    </div>
</div>